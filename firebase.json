{
  "hosting": {
    "public": "/",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "**/.*",
      "*.json",
      "**/*.log",
      "**/*.stackdump",
      "**/node_modules/**",
      "app",
      "cypress",
      "testing",
      "gulpfile.js",
      "README.md"
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=2678400"
          }
        ]
      },
      {
        "source": "/",
        "headers": [{"key": "Link", "value": "</app.js>;rel=preload;as=script;nopush,</app.css>;rel=preload;as=style;nopush"}]
      }
    ],
    "cleanUrls": true
  }
}
