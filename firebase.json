{
  "hosting": {
    "public": "/dist",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "**/.*",
      "**/*.log",
      "**/*.stackdump"
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=2678400"
          }
        ]
      },
      {
        "source": "/",
        "headers": [{"key": "Link", "value": "</app.js>;rel=preload;as=script;nopush,</app.css>;rel=preload;as=style;nopush"}]
      }
    ],
    "cleanUrls": true
  }
}
