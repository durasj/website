{
  "hosting": {
    "public": "/",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "app",
      "graphics",
      "content.js",
      "gulpfile.js",
      "package.json",
      "README.md",
      "tsconfig.json",
      "tslint.json",
      "typings.json"
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      },
      {
        "source": "/",
        "headers": [{"key": "Link", "value": "</app.js>;rel=preload;as=script;nopush,</app.css>;rel=preload;as=style;nopush"}]
      }
    ],
    "cleanUrls": true
  }
}
